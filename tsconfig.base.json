{
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "dom-helmet": ["packages/dom-helmet/src/index.ts"],
      "scatman": ["packages/scatman/src/index.ts"],
      "tsx-dom": ["packages/tsx-dom/src/index.ts"],
      "tsx-dom/jsx-runtime": ["packages/tsx-dom/src/jsx-runtime.ts"],
      "tsx-dom-ssr": ["packages/tsx-dom-ssr/src/index.ts"],
      "tsx-dom-ssr-demo-elements": ["packages/tsx-dom-ssr-demo-elements/src/index.ts"],
      "tsx-dom-ssr/jsx-runtime": ["packages/tsx-dom-ssr/src/jsx-runtime.ts"],
      "tsx-dom-types": ["packages/tsx-dom-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
